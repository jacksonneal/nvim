{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "My neovim config settings",
  "type": "object",
  "properties": {
    "colorscheme": {
      "type": "string",
      "enum": [
        "gruvbox-material",
        "rose-pine-dawn"
      ]
    },
    "denols": {
      "$ref": "#/$defs/lspSettings"
    },
    "eslint": {
      "$ref": "#/$defs/lspSettings"
    },
    "pyright": {
      "type": "object",
      "properties": {
        "pythonPath": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "tailwindcss": {
      "$ref": "#/$defs/lspSettings"
    },
    "tsserver": {
      "$ref": "#/$defs/lspSettings"
    },
    "volar": {
      "$ref": "#/$defs/lspSettings"
    }
  },
  "$defs": {
    "lspSettings": {
      "type": "object",
      "properties": {
        "disable": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
